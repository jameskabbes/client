{
    "data":{
        "!Dir":{
            "$ref": "{{cwd.Dir}}",
            "method":{
                "name": "join_Dir",
                "kwargs":{
                    "path": "Data"
                }
            }
        }
    },

    "config":{
        "!Dir":{
            "$ref": "{{xdg.Dir}}",
            "method":{
                "name": "join_Dir",
                "kwargs":{
                    "path": "kabbes"
                }
            }
        }
    },

    "package":{
        "!name":{
            "$ref": "{{_Dir}}",
            "method":{
                "name": "lowest"
            }
        },
        "config":{
            "cache":{
                "!Dir":{
                    "$ref": "{{config.Dir}}",
                    "method":{
                        "name": "join_Dir",
                        "kwargs":{
                            "path": "{{package.name}}"
                        }
                    }
                },
                "!Path":{
                    "$ref": "{{package.config.cache.Dir}}",
                    "method":{
                        "name": "join_Path",
                        "kwargs":{
                            "path": "config_cache.json"
                        }
                    }
                }
            },
            "!Path":{
                "$ref": "{{_Dir}}",
                "method":{
                    "name": "join_Path",
                    "kwargs":{
                        "path": "CONFIG.json"
                    }
                }
            }
        }
    },

    "user":{
        "config":{
            "path": "{{cwd.Dir}}/{{package_name}}.json",
            "!Path": {
                "$ref": "{{_Dir}}",
                "method": {
                    "name": "construct",
                    "args":["Path"],
                    "kwargs":{
                        "path": "{{user.config.path}}"
                    }
                }    
            }
        }
    }
}