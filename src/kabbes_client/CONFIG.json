{
    "!package_name":{
        "$ref": "{{_Dir}}",
        "method":{
            "name": "lowest"
        }
    },

    "!cache_Dir":{
        "$ref": "{{xdg.Dir}}",
        "method":{
            "name": "join_Dir",
            "kwargs":{
                "path": "kabbes"
            }
        }
        
    },
    "!package_cache_Dir":{
        "$ref": "{{cache_Dir}}",
        "method":{
            "name": "join_Dir",
            "kwargs":{
                "path": "{{package_name}}"
            }
        }
    },
    "!package_cache_Path":{
        "$ref": "{{package_cache_Dir}}",
        "method":{
            "name": "join_Path",
            "kwargs":{
                "path": "config_cache.json"
            }
        }
    },
    "!package_config_Path":{
        "$ref": "{{_Dir}}",
        "method":{
            "name": "join_Path",
            "kwargs":{
                "path": "CONFIG.json"
            }
        }
    },

    "cache":{
        "Dir": "{{cache_Dir}}",
        "package":{
            "Dir": "{{package_cache_Dir}}",
            "Path": "{{package_cache_Path}}"
        }
    },
    "package":{
        "name": "{{package_name}}",
        "config":{
            "Path": "{{package_config_Path}}"
        }
    },

    "user_config_path": "{{cwd.Dir}}/{{package_name}}.json",

    "user":{
        "config":{
            "!Path":{
                "$ref": "{{_Dir}}",
                "method": {
                    "name": "construct",
                    "args":["Path"],
                    "kwargs":{
                        "path": "{{user_config_path}}"
                    }
                }    
            }
        }
    }
}